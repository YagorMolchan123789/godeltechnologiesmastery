@model GTE.Mastery.ShoeStore.Business.Dtos.ShoeDto

<div class="col-lg-6">
    <a asp-controller="Shoe" asp-action="GetShoe" asp-route-id="@Model.Id">
        <img src="/img/@Model.ImagePath" width="400px" height="400px" />
    </a>
    <div>
        <div>
            <span class="price">@Model.Price</span>
        </div>
        <div>
            <span class="brand">@Model.Brand.Name - @Model.Name</span>
        </div>
    </div>
</div>