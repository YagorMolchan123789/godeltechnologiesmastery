@if (!User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Log in</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark">Hello, @User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form method="post" asp-controller="User" asp-action="Logout">
            <input type="submit" class="nav-link btn btn-link text-dark" value="Log out">
        </form>
    </li>
}
