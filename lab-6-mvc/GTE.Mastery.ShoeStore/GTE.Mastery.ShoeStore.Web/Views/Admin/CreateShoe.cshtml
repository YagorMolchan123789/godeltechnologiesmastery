@model GTE.Mastery.ShoeStore.Business.Dtos.UpdateShoeDto

<div class="shoe-create-edit-container">
    <h3>Create shoe</h3>
    <form method="post" id="createShoeForm" asp-controller="Admin" asp-action="CreateShoe" asp-route-totalRowCount="@ViewBag.TotalRowCount"
         asp-route-maxRowCountPerPage="@ViewBag.MaxRowCountPerPage" asp-route-totalPageCount="@ViewBag.TotalPageCount">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="field-container">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" class="form-control" required/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendor">Vendor</label>
                <input type="text" asp-for="Vendor" class="form-control" required/>
                <span asp-validation-for="Vendor"></span>
            </div>
        </div>
        <div class="field-container">
            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input type="text" asp-for="Price" class="form-control" required/>
                <span asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender">Gender</label>
                <select class="form-select form-select-lg" asp-for="Gender" required>
                    @foreach(var item in Model.Genders)
                    {
                        <option value="@item">@item.ToString()</option>
                    }
                </select>
                <span asp-validation-for="Gender"></span>
            </div>
        </div>
        <div class="field-container">
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select class="form-select form-select-lg" asp-for="CategoryId" required>
                    <option value="0" selected>Select category...</option>
                    @foreach(var item in Model.Categories)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId">Brand</label>
                <select class="form-select form-select-lg" asp-for="BrandId" required>
                    <option value="0" selected>Select brand...</option>
                    @foreach (var item in Model.Brands)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="BrandId"></span>
            </div>
        </div>
        <div class="field-container">
            <div class="form-group">
                <label asp-for="BrandId">Size</label>
                <select class="form-select form-select-lg" asp-for="SizeId" required>
                    <option value="0" selected>Select size...</option>
                    @foreach (var item in Model.Sizes)
                    {
                        <option value="@item.Id">@item.Value</option>
                    }
                </select>
                <span asp-validation-for="SizeId"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorId">Color</label>
                <select class="form-select form-select-lg" asp-for="ColorId" required>
                    <option value="0" selected>Select color...</option>
                    @foreach (var item in Model.Colors)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="ColorId"></span>
            </div>
        </div>
        <div class="submit-container">
            <a class="btn btn-primary" asp-controller="Admin" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-success">Create</button>
        </div> 
    </form>
</div>



