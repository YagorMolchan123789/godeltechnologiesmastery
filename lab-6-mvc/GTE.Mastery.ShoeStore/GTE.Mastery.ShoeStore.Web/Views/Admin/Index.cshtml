@using GTE.Mastery.ShoeStore.Web.Helpers
@model GTE.Mastery.ShoeStore.Web.Models.ShoeViewModel

<div class="admin-container">
    <a class="btn btn-info" asp-controller="Admin" asp-action="CreateShoe">Add new shoe</a>
    @if (Model.Shoes.Count() > 0)
    {
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Vendor</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Price</th>
                        <th scope="col">Category</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Size</th>
                        <th scope="col">Color</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Shoes)
                    {
                        <tr>
                            <td><p>@item.Name</p></td>
                            <td><p>@item.Vendor</p></td>
                            <td><p>@item.Gender</p></td>
                            <td><p>@item.Price</p></td>
                            <td><p>@item.Category.Name</p></td>
                            <td><p>@item.Brand.Name</p></td>
                            <td><p>@item.Size.Value</p></td>
                            <td><p>@item.Color.Name</p></td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Admin" asp-action="EditShoe" asp-route-id="@item.Id">Edit</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteShoe" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <page-link page-model="Model.PageViewModel" page-action="Index"></page-link>
        </div>
    }
</div>
