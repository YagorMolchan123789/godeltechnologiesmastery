@model IEnumerable<GTE.Mastery.ShoeStore.Business.Dtos.ShoeDto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="table-container" id="homeTable">
    <div class="home-header">
        <div class="home-paragraph">
            <h3>Welcome to our ShoeStore.</h3>
        </div>
        <div class="home-paragraph">
            <h4>There are presented the shoes of the top brands around the world.</h4>
        </div>
    </div>    
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Vendor</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Size</th>
                    <th scope="col">Color</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/img/@item.ImagePath" width="30px" height="30px"/></td>
                        <td><p>@item.Name</p></td>
                        <td><p>@item.Vendor</p></td>
                        <td><p>@item.Gender</p></td>
                        <td><p>@item.Price</p></td>
                        <td><p>@item.Category.Name</p></td>
                        <td><p>@item.Brand.Name</p></td>
                        <td><p>@item.Size.Value</p></td>
                        <td><p>@item.Color.Name</p></td>
                    </tr>
                }
            </tbody>
        </table>
    }    
    <div class="home-paragraph">
        @if (User.Identity.IsAuthenticated)
        {
            <h4>To explore more the shoes, you should click this button  <a class="btn btn-primary" asp-controller="Shoe" asp-action="Index" style="margin-left: 1%">See more</a></h4>
        }
        else
        {
            <h4>If you want to observe more shoes, you have to authorize in the system. Please, click <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Log in</a></h4>
        }
    </div>    
</div>
