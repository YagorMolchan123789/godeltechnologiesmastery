@model GTE.Mastery.ShoeStore.Web.Models.ShoeViewModel

<a class="btn btn-primary" asp-controller="Home" asp-action="Index">Exit</a>
@if(Model.Shoes.Count()>0)
{    
    <div class="shoe-list-container">
        <div class="row">
            @foreach (var item in Model.Shoes)
            {
                <partial name="_ShoeLink" model="@item" />
            }
        </div>
    </div>
    <div class="shoe-container">        
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? "" : "hidden")">
                <a class="page-link" asp-controller="Shoe" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">@("<")</a>
            </li>
            @for(int i = 1; i <= Model.TotalPageCount; i++)
            {
                <li class="page-item">
                    @if (i != Model.CurrentPage)
                    {
                        <a class="page-link" asp-controller="Shoe" asp-action="Index" asp-route-page="@i">@i</a>
                    }
                    else
                    {
                        <a class="active page-link" asp-controller="Shoe" asp-action="Index" asp-route-page="@i" style="background-color: dodgerblue; color: white">@i</a>
                    }
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "hidden")">
                <a class="page-link" asp-controller="Shoe" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">@(">")</a>
            </li>
        </ul>
    </div>
}

